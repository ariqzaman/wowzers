<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.github.mikephil.charting.charts.CandleStickChart
            android:id="@+id/mpstockIndexChart"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/stockIndexOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="420dp"
            android:text="Open:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stockIndexOpenValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="420dp"
            android:text="$9999.99"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stockIndexHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="460dp"
            android:text="High:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stockIndexHighValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="460dp"
            android:text="$9999.99"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stockIndexLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="500dp"
            android:text="Low:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stockIndexLowValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="500dp"
            android:text="$9999.99"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stockIndexClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="420dp"
            android:text="Close:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stockIndexCloseValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="290dp"
            android:layout_marginTop="420dp"
            android:text="$9999.99"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stockIndexVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="460dp"
            android:text="Volume:"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stockIndexVolumeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="290dp"
            android:layout_marginTop="460dp"
            android:text="$9999.99"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>